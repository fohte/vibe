{
  "name": "vibe",
  "version": "0.1.0",
  "description": "A sophisticated wrapper for Claude Code that manages git worktrees and tmux sessions",
  "private": true,
  "type": "module",
  "bin": {
    "vibe": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc && node scripts/add-shebang.js dist/cli.js",
    "dev": "tsc --watch",
    "lint": "eslint .",
    "format:eslint": "eslint --fix .",
    "format:prettier": "prettier --write .",
    "format": "conc -m 1 npm:format:eslint npm:format:prettier",
    "test": "conc npm:test:type npm:test:unit",
    "test:type": "tsc --noEmit",
    "test:unit": "vitest run"
  },
  "dependencies": {
    "chalk": "5.6.2",
    "commander": "14.0.2",
    "execa": "8.0.1",
    "inquirer": "9.3.8",
    "neverthrow": "8.2.0",
    "ora": "8.2.0"
  },
  "devDependencies": {
    "@fohte/eslint-config": "0.1.1",
    "@tsconfig/node22": "22.0.4",
    "@types/node": "20.19.25",
    "@typescript-eslint/eslint-plugin": "7.18.0",
    "@typescript-eslint/parser": "7.18.0",
    "concurrently": "9.2.1",
    "eslint": "8.57.1",
    "eslint-config-prettier": "9.1.2",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "prettier": "3.5.3",
    "typescript": "5.8.3",
    "vitest": "3.2.4"
  }
}
