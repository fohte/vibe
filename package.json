{
  "name": "vibe",
  "version": "0.1.0",
  "description": "A sophisticated wrapper for Claude Code that manages git worktrees and tmux sessions",
  "private": true,
  "type": "module",
  "bin": {
    "vibe": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint .",
    "format:eslint": "eslint --fix .",
    "format:prettier": "prettier --write .",
    "format": "conc -m 1 bun:format:eslint bun:format:prettier",
    "test": "conc bun:test:type bun:test:unit",
    "test:type": "tsc --noEmit",
    "test:unit": "vitest run"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "execa": "^8.0.1",
    "inquirer": "^9.2.15",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@fohte/eslint-config": "0.0.4",
    "@tsconfig/bun": "1.0.8",
    "@types/bun": "1.2.16",
    "@types/node": "^20.11.24",
    "concurrently": "9.1.2",
    "eslint": "8.57.1",
    "prettier": "3.5.3",
    "typescript": "5.8.3",
    "vitest": "3.2.3"
  }
}
