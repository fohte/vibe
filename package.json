{
  "name": "vibe",
  "version": "0.1.0",
  "description": "A sophisticated wrapper for Claude Code that manages git worktrees and tmux sessions",
  "private": true,
  "type": "module",
  "bin": {
    "vibe": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc && echo '#!/usr/bin/env node' | cat - dist/cli.js > temp && mv temp dist/cli.js",
    "dev": "tsc --watch",
    "lint": "eslint .",
    "format:eslint": "eslint --fix .",
    "format:prettier": "prettier --write .",
    "format": "conc -m 1 npm:format:eslint npm:format:prettier",
    "test": "conc npm:test:type npm:test:unit",
    "test:type": "tsc --noEmit",
    "test:unit": "vitest run"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "execa": "^8.0.1",
    "inquirer": "^9.2.15",
    "neverthrow": "8.2.0",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@fohte/eslint-config": "0.1.0",
    "@tsconfig/node22": "22.0.2",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "8.34.0",
    "@typescript-eslint/parser": "8.34.0",
    "concurrently": "9.1.2",
    "eslint": "8.57.1",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "prettier": "3.5.3",
    "typescript": "5.8.3",
    "vitest": "3.2.3"
  }
}
